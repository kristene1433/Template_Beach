{
  "name": "rental-property-template",
  "version": "1.0.0",
  "description": "Template rental property management website for demonstrations",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "heroku-postbuild": "cd client && npm install && npm rebuild react-scripts && npm run build",
    "vercel-build": "cd client && npm install && npm run build",
    "create-admin": "node server/scripts/createAdmin.js",
    "delete-admin": "node server/scripts/deleteAdmin.js",
    "check-admin": "node server/scripts/checkAdmin.js",
    "create-demo-data": "node server/scripts/createDemoData.js",
    "reset-demo-data": "node server/scripts/resetDemoData.js",
    "fix-demo-passwords": "node server/scripts/fixDemoPasswords.js",
    "test-login": "node server/scripts/testLogin.js",
    "force-fix-passwords": "node server/scripts/forceFixPasswords.js",
    "test-lease": "node server/scripts/testLease.js",
    "setup-production": "node server/scripts/setupProduction.js"
  },
  "keywords": [
    "rental",
    "property",
    "management",
    "tenant",
    "application"
  ],
  "author": "Property Management Template",
  "license": "MIT",
  "engines": {
    "node": "22.x",
    "npm": "10.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "pdf-lib": "^1.17.1",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
